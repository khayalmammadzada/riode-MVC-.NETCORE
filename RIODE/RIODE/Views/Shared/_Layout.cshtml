                                        close<i class="d-icon-arrow-right"></i><span class="sr-only">Cart</span>
                                    </a>
                                </div>
                                <div class="products scrollable">
                                    @if (layouService.GetBasket() != null)
                                    {

                                        @foreach (BasketItemVM item in layouService.GetBasket().BasketItemVMs)
                                        {
                                            <div class="product product-cart">
                                                <figure class="product-media">
                                                    <a href="product.html">
                                                        <img src="~/assets/images/products/@item.Product.ProductImages.FirstOrDefault(p=>p.Status == true).ImageUrl" alt="product" width="80"
                                                             height="88" />
                                                    </a>
                                                    <button class="btn btn-link btn-close removeButton">
                                                        <i class="fas fa-times"></i><span class="sr-only">Close</span>
                                                    </button>
                                                </figure>
                                                <div class="product-detail">
                                                    <a href="product.html" class="product-name"> @item.Product.Name</a>
                                                    <div class="price-box">
                                                        <span class="product-quantity">@item.Quantity</span>
                                                        <span class="product-price">$@item.Product.SellPrice</span>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    }
                                    else
                                    {
                                        <div>There is no product in basket</div>
                                    }
                                    <!-- End of Cart Product -->
                                    <!-- End of Cart Product -->
                                </div>
                                <!-- End of Products  -->
                                <div class="cart-total">
                                    <label>Subtotal:</label>
                                    <span class="price">$@layouService.GetBasket()?.TotalPrice</span>
                                </div>
                                <!-- End of Cart Total -->
                                <div class="cart-action">
                                    <a href="cart.html" class="btn btn-dark btn-link">View Cart</a>
                                    <a href="checkout.html" class="btn btn-dark"><span>Go To Checkout</span></a>
                                </div>
                                <!-- End of Cart Action -->
                            </div>
                            <!-- End Dropdown Box -->
