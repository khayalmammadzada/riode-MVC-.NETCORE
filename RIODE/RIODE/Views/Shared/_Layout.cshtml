                                <div class="cart-label d-lg-show">
                                    <span class="cart-name">Shopping Cart:</span>
                                    <span class="cart-price">$0.00</span>
                                </div>
                                <i class="d-icon-bag"><span class="cart-count">@(layouService.GetBasket() !=null ? layouService.GetBasket().BasketItemVMs.Count.ToString() : "0")</span></i>
                            </a>
