@{
    ViewData["Title"] = "Login";
}
@model LoginVM

<main class="main">
    <nav class="breadcrumb-nav">
        <div class="container">
            <ul class="breadcrumb">
                <li><a href="demo1.html"><i class="d-icon-home"></i></a></li>
                <li><a href="shop.html">Riode Shop</a></li>
                <li>My Account</li>
            </ul>
        </div>
    </nav>
    <div class="page-content mt-6 pb-2 mb-10">
        <div class="container">
            <div class="login-popup">
                <div class="form-box">
                    <div class="tab tab-nav-simple tab-nav-boxed form-tab">
                        <ul class="nav nav-tabs nav-fill align-items-center border-no justify-content-center mb-5" role="tablist">
                            <li class="nav-item">
                                <a class="nav-link active border-no lh-1 ls-normal" href="#signin">Login</a>
                            </li>
                        </ul>
                        <div class="tab-content">
                            <div class="alert alert-danger" asp-validation-summary="ModelOnly"></div>
                            <div class="tab-pane active" id="signin">
                                <form method="post">
                                    <div class="form-group mb-3">
                                        <input asp-for="Username" class="form-control" placeholder="Username" required /> <br />
                                        <span class="text text-danger" asp-validation-for="Username"></span>
                                    </div>
                                    <div class="form-group">
                                        <input asp-for="Password" class="form-control" placeholder="Password" required /> <br />
                                        <span class="text text-danger" asp-validation-for="Password"></span>
                                    </div>
                                    <div class="form-footer">
                                        <div class="form-checkbox">
                                            <input asp-for="RememberMe" style="width: 20px; height: 20px; -webkit-appearance: checkbox !important;" >
                                            <label class="form-control-label" >
                                                Remember
                                                me
                                            </label>
                                        </div>
                                        <a href="#" class="lost-link">Lost your password?</a>
                                    </div>
                                    <button class="btn btn-dark btn-block btn-rounded" type="submit">Login</button>
                                </form>
                              
                            </div>
                          
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>