					<div class="product product-single row mb-8">
						<div class="col-md-6">
							<div class="product-gallery">
                                <div class="product-single-carousel owl-carousel owl-theme owl-nav-inner row cols-1">
                                    @foreach (var img in Model.ProductImages)
                                    {
                                        <figure class="product-image">
                                            <img src="~/assets/images/products/@img.ImageUrl"
                                                 data-zoom-image="images/demos/demo3/product/product-1-800x900.jpg"
                                                 alt="Blue Pinafore Denim Dress" width="800" height="900"
                                                 style="background-color: #f5f5f5;" />
                                        </figure>
                                    }
                                </div>
								<div class="product-thumbs-wrap">
									<div class="product-thumbs">
									@foreach(var img in Model.ProductImages)
										{
                                            <div class="product-thumb active">
                                                <img src="~/assets/images/products/@img.ImageUrl"
                                                     alt="product thumbnail" width="137" height="154"
                                                     style="background-color: #f5f5f5;" />
                                            </div>
										}
									</div>
									<button class="thumb-up disabled"><i class="fas fa-chevron-left"></i></button>
									<button class="thumb-down disabled"><i class="fas fa-chevron-right"></i></button>
								</div>
							</div>
						</div>
						<div class="col-md-6">
							<div class="product-details  product-gallery-sticky">
								<div class="product-navigation">
									<ul class="breadcrumb breadcrumb-lg">
										<li><a href="demo3.html"><i class="d-icon-home"></i></a></li>
										<li><a href="#" class="active">Products</a></li>
										<li>Detail</li>
									</ul>

									<ul class="product-nav">
										<li class="product-nav-prev">
											<a asp-controller="Product" asp-action="Detail" asp-route-id="@(Model.Id-1)">
												<i class="d-icon-arrow-left"></i> Prev
												<span class="product-nav-popup">
													<img src="~/assets/images/product/product-thumb-prev.jpg"
														alt="product thumbnail" width="110" height="123">
													<span class="product-name">Sed egtas Dnte Comfort</span>
												</span>
											</a>
										</li>
										<li class="product-nav-next">
											<a asp-controller="Product" asp-action="Detail" asp-route-id="@(Model.Id+1)">
												Next <i class="d-icon-arrow-right"></i>
												<span class="product-nav-popup">
													<img src="~/assets/images/product/product-thumb-next.jpg"
														alt="product thumbnail" width="110" height="123">
													<span class="product-name">Sed egtas Dnte Comfort</span>
												</span>
											</a>
										</li>
									</ul>
								</div>

								<h1 class="product-name">@Model.Name</h1>
								<div class="product-meta">
									CATEGORIES:<span class="product-brand">@Model.Category.Name , @Model.Subcategory.Name</span>
								</div>
								<div class="product-price">$@Model.SellPrice</div>
								<div class="ratings-container">
                                    <div class="ratings-full">
                                        @if (Model.ReviewCount != 0)
                                        {
                                            <span class="ratings" style="width:@((Model.ReviewSum??0)/(Model.ReviewCount??1))%"></span>

                                        }
                                        else
                                        {
                                            <span class="ratings" style="width:0%"></span>

                                        }
                                        <span class="tooltiptext tooltip-top"></span>
                                    </div>
									<a href="#product-tab-reviews" class="link-to-tab rating-reviews">( @Model.ReviewCount reviews )</a>
