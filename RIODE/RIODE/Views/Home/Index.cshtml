                                        @service.Title
                                     
                                    </h4>
                                    <p class="ls-s lh-1">@service.Subtitle</p>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </section>

        <section class="pt-10 mt-7 appear-animate" data-animation-options="{
                    'delay': '.3s'
                }">
