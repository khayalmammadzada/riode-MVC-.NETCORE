@{
    ViewData["Title"] = "Create";
}
@model Subcategory

@section styles{
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
}

<div class="main-panel">
    <h1>Create Subcategory</h1>
    <form class="mt-3" method="post" enctype="multipart/form-data">
        <div>
            <label>Name</label> <br />
            <input asp-for="Name" class="form-control" /> <br />
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
        <div>
            <label>Image</label> <br />
            <input asp-for="ImageFile" class="form-control" /> <br />
            <span class="text-danger" asp-validation-for="ImageFile"></span>
        </div>
        <div>
            <select class="mySelect2 w-100" asp-for="CategoryId" asp-items="new SelectList(ViewBag.Categories, nameof(Category.Id),nameof(Category.Name))">
                <option disabled selected>Choose Main Category</option>
            </select>
            <span class="text-danger" asp-validation-for="CategoryId"></span>
        </div>
        <div class="mt-2">
            <button class="btn btn-success" type="submit">Create</button>
        </div>
    </form>
</div>

@section scripts{
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script>$('.mySelect2').select2({
            selectOnClose: true
        });
        $('.mySelect2-multiple').select2({
            selectOnClose: false
        });</script>
}