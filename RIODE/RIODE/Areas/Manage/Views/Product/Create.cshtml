@{
    ViewData["Title"] = "Create";
}
@model Product

@section styles{
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
}

<div class="main-panel">
    <h1>Create product</h1>
    <div class="alert alert-danger" asp-validation-summary="ModelOnly"></div>
    <form class="mt-3" method="post" enctype="multipart/form-data">
        <div>
            <label>Main Image</label> <br />
            <input asp-for="MainImage" class="form-control" /> <br />
            <span class="text-danger" asp-validation-for="MainImage"></span>
        </div>
        <div>
            <label>Hover Image</label> <br />
            <input asp-for="HoverImage" class="form-control" /> <br />
            <span class="text-danger" asp-validation-for="HoverImage"></span>
        </div>
        <div>
            <label>Other Image</label> <br />
            <input asp-for="Images" class="form-control" /> <br />
            <span class="text-danger" asp-validation-for="Images"></span>
        </div>
        <div>
            <label>Name</label> <br />
            <input asp-for="Name" class="form-control" /> <br />
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
        <div>
            <label>Cost Price</label> <br />
            <input asp-for="CostPrice" class="form-control" /> <br />
            <span class="text-danger" asp-validation-for="CostPrice"></span>
        </div>
        <div>
            <label>Sell Price</label> <br />
            <input asp-for="SellPrice" class="form-control" /> <br />
            <span class="text-danger" asp-validation-for="SellPrice"></span>
        </div>
        <div>
            <label>Subtitle</label> <br />
            <input asp-for="SubTitle" class="form-control" /> <br />
            <span class="text-danger" asp-validation-for="SubTitle"></span>
        </div>
        <div>
            <label>Stock Count</label> <br />
            <input asp-for="StockCount" class="form-control" /> <br />
            <span class="text-danger" asp-validation-for="StockCount"></span>
        </div>
        <div>
            <select class="mySelect2 w-100" asp-for="CategoryId" asp-items="new SelectList(ViewBag.Categories, nameof(Category.Id),nameof(Category.Name))">
                <option disabled selected>Choose Category </option>
            </select>
            <span class="text-danger" asp-validation-for="CategoryId"></span>
        </div>
        <div>
            <select class="mySelect2 w-100" asp-for="SubcategoryId" asp-items="new SelectList(ViewBag.Subcategories, nameof(Subcategory.Id),nameof(Subcategory.Name))">
                <option disabled selected>Choose Subcategory </option>
            </select>
            <span class="text-danger" asp-validation-for="SubcategoryId"></span>
        </div>
        <div>
            <select class="mySelect2 w-100" asp-for="BadgeId" asp-items="new SelectList(ViewBag.Badges, nameof(Badge.Id),nameof(Badge.Name))">
                <option disabled selected>Choose Badge</option>
            </select>
            <span class="text-danger" asp-validation-for="BadgeId"></span>
        </div>
        <div>
            <select class="mySelect2 w-100" asp-for="BrandId" asp-items="new SelectList(ViewBag.Brands, nameof(Brand.Id),nameof(Brand.Name))">
                <option disabled selected>Choose Brand</option>
            </select>
            <span class="text-danger" asp-validation-for="BrandId"></span>
        </div>
        <div class="mt-2">
            <label asp-for="ColorIds" disabled>Choose Color</label>
            <select multiple class="mySelect2-multiple w-100" asp-for="ColorIds" asp-items="new SelectList(ViewBag.Colors, nameof(Color.Id),nameof(Color.Name))">
            </select>
            <span class="text-danger" asp-validation-for="ColorIds"></span>
        </div>

        <div class="mt-2">
            <button class="btn btn-success" type="submit">Create</button>
        </div>
    </form>
</div>


@section scripts{
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script>$('.mySelect2').select2({
            selectOnClose: true
        });
        $('.mySelect2-multiple').select2({
            selectOnClose: false
        });</script>
}