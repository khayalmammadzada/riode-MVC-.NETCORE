@{
    ViewData["Title"] = "Create";
}
@model Slider

<div class="main-panel">
    <h1>Create slider</h1>
    <form class="mt-3" method="post" enctype="multipart/form-data">
        <div>
            <label>Title</label> <br />
            <input asp-for="Title" type="text" class="form-control" /> <br />
            <span class="text-danger" asp-validation-for="Title"></span>
        </div>
        <div>
            <label>Subtitle</label> <br />
            <input asp-for="Subtitle" type="text" class="form-control" /> <br />
            <span class="text-danger" asp-validation-for="Subtitle"></span>
        </div>
        <div>
            <label>Image</label> <br />
            <input asp-for="ImageFile" type="file" class="form-control" /> <br />
            <span class="text-danger" asp-validation-for="ImageFile"></span>
        </div>
        <div>
            <label>Order</label> <br />
            <input asp-for="Order" type="text" class="form-control" /> <br />
            <span class="text-danger" asp-validation-for="Order"></span>
        </div>
        <div class="mt-2">
            <button class="btn btn-success" type="submit">Create</button>
        </div>
    </form>
</div>